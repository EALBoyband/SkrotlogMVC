@model IEnumerable<SkrotlogMVC.Models.Customer> 
@{
    ViewData["Title"] = "CreateCustomer";
}
<div class="container">
    <div class="col-lg-4">
        <h2>Opret opkøber</h2>
    </div>
    <div class="col-lg-7 col-lg-offset-1">
        <h2>Eksisterende opkøbere:</h2>
    </div>
    <div class="col-lg-4">
        <form method="post">
            <div class="form-group">
                <label for="customerInput">Virksomhed</label>
                <input type="text" class="form-control" name="customer" id="customerInput" placeholder="Virksomhed" />
            </div>
            <div class="form-group">
                <label for="countryInput">Land</label>
                <input type="text" class="form-control" name="country" placeholder="Land" id="countryInput" />
            </div>
            <button type="submit" class="btn btn-primary">Gem</button>
        </form>
    </div>
    <div class="col-lg-7 col-lg-offset-1">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Virksomhed</th>
                    <th scope="col">Land</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <th>@c.Name</th>
                        <th>@c.Country</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>